{
  "compilerOptions": {
    "rootDir": "src",
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "outDir": "compile",
    "declaration": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "**/__test__",
  ],
}
